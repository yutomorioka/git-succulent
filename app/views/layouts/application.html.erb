<!DOCTYPE html>
<html>
  <head>
    <title>Succulent</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <% if admin_signed_in? %>
            <a class="navbar-brand p-3" href="/"><span><%= link_to 'Succulent', admin_root_path %></spann></a>
            <ul class="navbar-nav ml-auto">
              <li class="nav-link text-light"><%= link_to '植物管理', admin_plants_path %></li>
              <li class="nav-link text-light"><%= link_to '会員一覧', admin_users_path %></li>
              <li class="nav-link text-light"><%= link_to '投稿一覧', admin_root_path %></li>
              <li class="nav-link text-light"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
            </ul>
          <% elsif user_signed_in? %>
            <%= link_to 'Succulent', root_path %>
            <ul class="flex">
              <p>ようこそ、<%= current_user.name %>さん!</p>
              <li><%= link_to 'マイページ', user_path(current_user) %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
              <li><%= link_to '投稿一覧', post_plants_path %></li>
              <li><%= link_to '新規投稿', new_post_plant_path %></li>
          </ul>
          <% else %>
          <%= link_to 'Succulent', root_path %>
          <ul class="flex">
            <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %></li>
            <li><%= link_to '新規登録', new_user_registration_path %></li>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
          </ul>
          <% end %>
        </div>
      </nav>
    </header>


    <main class="mb-auto">
      <%= yield %>
    </main>
    
    <footer>
      Copyright © Infratop Inc. All Rights Reserved.
    </footer>
  </body>
</html>
