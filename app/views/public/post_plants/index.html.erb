<h2>投稿一覧</h2>

<% if user_signed_in? %>
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag "search[content]", "", :placeholder =>"会員: 姓,名,セイ,メイ / 商品: 商品名" %>
    <%= select_tag "search[model]", options_for_select({ "会員" => "user", "商品" => "plant" }) %>
    <%= select_tag "search[method]", options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
    <%= submit_tag '検索', class: "btn btn-primary" %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>多肉植物名</th>
      <th>品種名</th>
      <th>ユーザー名</th>
    </tr>
  </thead>
  <tbody>
    <% @post_plants.each do |post_plant| %>
      <tr>
        <td>画像
        <%= link_to post_plant.title, post_plant_path(post_plant.id) %></td>
        <td><%= post_plant.plant.name %></td>
        <td><%= post_plant.plant.genre %></td>
        <td><%= post_plant.user.name%></td>
      </tr>
    <% end %>
  </tbody>
</table>

