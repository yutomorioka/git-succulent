<div class="container mt-4">
  <div class="row">
    <div class="col-8">
      <h2>投稿一覧</h2>
      <%= render 'public/post_plants/index', post_plants: @post_plants %>
    </div>
    <div class="col5">
      <% if user_signed_in? %>
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :search, :placeholder =>"アロエ、サボテン等" %>
          <%= f.submit '検索', class: "btn btn-primary" %>
        <% end %>


    特徴から探す
      <div class="d-flex flex-column flex-wrap">
        <% @tags.each do |tag| %>
          <%= link_to tag.name, search_path(tag_ids: tag.name), class: "btn-group btn-group-sm btn-secondary rounded m-1 p-1 col-11" %>
        <% end %>
      </div>
        <% end %>
    </div>
  </div>
</div>
