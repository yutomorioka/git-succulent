<h2>投稿一覧</h2>

<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :search, :placeholder =>"アロエ、サボテン等" %>

    <%= f.label :"特徴" %>
		<% @tags.each do |tag| %>
		<%= f.check_box :search, {multiple: true} %>
		<%= tag.name %>
		<% end %>

    <%= f.submit '検索', class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= render 'public/post_plants/index', post_plants: @post_plants %>
