<div>
  <h1><%= @post_plant.title %></h1>
  <div>
    画像
    <%= @post_plant.user.name %>
  </div>
  <table>
    <tbody>
      <tr>
        <th>植物名</th>
        <td><%= @post_plant.plant.name %></td>
        <th>属名</th>
        <td><%= @post_plant.plant.genre %></td>
        <th>地域</th>
        <td><%= @post_plant.area %></td>
        <th>特徴(タグ)</th>
        <td>
          <% @tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <div>画像</div>
  <div>作成日</div>
  <div><%= @post_plant.explanation %></div>

  <div><%= render "public/favorites/favorite", post_plant: @post_plant %></div>

  <%= render "public/comments/index", post_plant: @post_plant %>
  <%= render "public/comments/form", post_plant: @post_plant, comment: @comment %>

</div>
