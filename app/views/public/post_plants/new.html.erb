<% if @post_plant.errors.any? %>
  <div class="notification bg-danger">
    <%= @post_plant.errors.count %>件のエラーが発生しました
    <ul>
      <% @post_plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container col-5 mt-4">
	<h4>投稿画面</h4>
  <%= form_with model: @post_plant, url: post_plants_path do |f| %>
    <div>
      <%= f.label :image, "写真" %>
      <div>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="mt-3">
      <div class="form-group">
        <%= f.label :name, "多肉植物名" %>
        <div>
  		    <%= f.select :plant_id, options_from_collection_for_select(Plant.all, :id, :name), {}, class: "form-control col-3" %>
  		  </div>
      </div>
    </div>
    <div class="form-group">
    	<%= f.label :area, "場所" %>
  		<%= f.select :area, PostPlant.areas.keys, {}, class: "form-control col-3" %>
  	</div>

    <div class="form-group">
  		<%= f.label :title, "タイトル" %>
  		<%= f.text_field :title, class: "form-control col-7" %>
    </div>
    <div class="form-group">
    	<%= f.label :explanation, "本文" %>
    	<%= f.text_area :explanation, class: "form-control col-7", rows: 7 %>
  	</div>
  	<div class="check">
      <%= f.label :name, "特徴" %>
      <div>
    	<%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    		<%= tag.label { tag.check_box + tag.text } %>
     	<% end %>
     	</div>
  	</div>
      <%= f.submit "投稿", class: "btn btn-primary ml-2" %>
  <% end %>
</div>