<% if post_plant.favorited_by?(current_user) %>
  <%= link_to post_plant_favorites_path(post_plant), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post_plant.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_plant_favorites_path(post_plant), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_plant.favorites.count %> いいね
  <% end %>
<% end %>