<div class="card mt-4">
  <p class="card-header">コメント一覧　<%= post_plant.comments.count %>件</p>
  <% post_plant.comments.each do |comment| %>
    <div class="card-body border p-2">
      
      <p class="card-name"><%= comment.user.name %></p>

      
       
         <p class="card-text ml-3 mb-3"><%= comment.comment %></p>
      
         <%= comment.created_at.strftime('%Y/%m/%d') %>

    </div>
  <% end %>

</div>
