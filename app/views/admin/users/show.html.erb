<section class="inner">
  <h2 class="section-ttl"><%= @user.name %>さんのページ</h2>
    <table class="customer_info">
	  <thead>
	    <th></th>
		 <th></th>
		<th></th>
	  </thead>
	  <tbody>
	    <tr>
		  <td>会員ID</td>
		  <td colspan="2"><%= @user.id %></td>
		</tr>
		<tr>
		  <td>名前</td>
		  <td><%= @user.name %></td>
		</tr>
		<tr>
		  <td>メールアドレス</td>
		  <td colspan="2"><%= @user.email %></td>
		</tr>
		<tr>
		  <td>会員ステータス</td>
		  <td colspan="2">
		    <% if @user.is_active? %>
		      <span class="text-active">有効	</span>
		    <% else %>
		      <span class="text-invalid">退会済み</span>
		    <% end %>
		  </td>
		</tr>
		<tr>
		  <td><%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-success" %></td>
		  <td><%= link_to "投稿一覧", admin_user_post_plants_path(@user), class: "btn btn-primary" %></td>
	    </tr>
	  </tbody>
	</table>

</section>