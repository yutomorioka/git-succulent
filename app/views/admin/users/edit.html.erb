<div class="container mt-3">
  <h2><%= @user.name %> さんの会員情報編集</h2>
	<%= form_with(model: @user, url: admin_user_path(@user), local: true) do |f| %>
	  <%= render 'layouts/error_messages', resource: @user %>
	    <table class="table table-md table-borderless ">
		  <tbody>
		    <tr>
			  <td class="col-2">名前</td>
        	  <td><%= f.text_field :name, :placeholder =>"#{@user.name}" %></td>
			</tr>
			<tr>
			  <td class="col-2">メールアドレス</td>
			  <td><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@user.email}" %></td>
			</tr>
			<tr>
			  <td class="col-1">会員ステータス</td>
			  <td>
			  	<%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active mr-4" %>
			  	<%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", class: "text-invalid" %>
			  </td>
			</tr>
			<tr>
			  <td><%= f.submit "更新", class: "btn btn-primary" %></td>
		    </tr>
	      </tbody>
		</table>
	<% end %>
</container>