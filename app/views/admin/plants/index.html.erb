<div class="container mt-3" >
	<h2>多肉植物管理</h2>
		<div class="row">
			<div class="col-4 mt-3 ml-4">
				<h3 class="mb-3">植物新規登録</h3>
					<%= form_with model: @plant, url: admin_plants_path do |f| %>
						<div class="form-group">
							<%= f.label :name, "多肉植物名:" %>
							<%= f.text_field :name, class:"form-control col-6" %>
						</div>
						<div class="form-group">
							<%= f.label :genre, "属名:" %>
							<%= f.text_field :genre, class:"form-control col-6" %>
						</div>
							<%= f.submit "追加", class: "btn btn-primary ml2" %>
					<% end %>
			</div>
			<div class="col-6 mt-3">
				<h3>多肉植物一覧</h3>
				<table class="genre_info has_border">
  				<thead>
  					<tr>
	  					<th>植物名</th>
	  					<th>属名</th>
      				<th></th>
						</tr>
  				</thead>
  			<tbody>
					<% @plants.each do |plant| %>
	  				<tr>
	    				<td><%= plant.name %></td>
							<td><%= plant.genre %></td>
							<td class="text-center"><%= link_to "編集", edit_admin_plant_path(plant), class: "btn btn-success" %></td>
	  				</tr>
					<% end %>
  			</tbody>
			</table>
			</div>
		</div>
</div>

